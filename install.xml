      <file from="root/install/gallery_install.php" to="install/gallery_install.php" />
      <file from="root/install/gallery_update.php" to="install/gallery_update.php" />
      <file from="root/install/index.htm" to="install/index.htm" />
      <file from="root/language/en/mods/info_acp_gallery.php" to="language/en/mods/info_acp_gallery.php" />
